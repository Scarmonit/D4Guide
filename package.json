{
  "name": "d4guide",
  "version": "1.0.0",
  "description": "Diablo 4 Blood Wave Necromancer Build Guide",
  "type": "module",
  "scripts": {
    "dev": "npx browser-sync start --server --files \"*.html, *.css, *.js, blood_wave_images/*\" --no-notify --open blood_wave_necro_guide_advanced.html",
    "build": "node scripts/build.js",
    "lint": "npx eslint scripts.js --fix",
    "lint:css": "npx stylelint styles.css --fix",
    "format": "npx prettier --write \"*.{html,css,js}\"",
    "validate": "npx html-validate blood_wave_necro_guide_advanced.html",
    "serve": "npx http-server -p 8890 -o blood_wave_necro_guide_advanced.html",
    "serve:dist": "npx http-server dist -p 8891 -o",
    "deploy:check": "node scripts/deploy-check.js",
    "optimize": "node scripts/optimize-images.js",
    "test": "npm run build && npm run deploy:check",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:chromium": "npx playwright test --project=chromium",
    "test:e2e:report": "npx playwright show-report test-results/html-report",
    "test:unit": "npx vitest run",
    "test:unit:watch": "npx vitest",
    "test:unit:ui": "npx vitest --ui",
    "test:unit:coverage": "npx vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:e2e:chromium",
    "prepare": "husky",
    "snapshot": "node scripts/snapshot.js",
    "diff": "node scripts/diff.js",
    "extract": "node scripts/extract-updates.js",
    "auto-update": "npm run snapshot && npm run diff && npm run extract",
    "scrape": "node scraper/index.js",
    "scrape:icy": "node -e \"import('./scraper/icy-veins.js').then(m => m.default().then(console.log))\"",
    "scrape:maxroll": "node -e \"import('./scraper/maxroll.js').then(m => m.default().then(console.log))\"",
    "integrate": "node scripts/integrate-data.js",
    "sync": "npm run scrape && npm run integrate",
    "update-data": "npm run scrape && npm run integrate && npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "browser-sync": "^3.0.4",
    "clean-css": "^5.3.3",
    "clean-css-cli": "^5.6.3",
    "crawlee": "^3.15.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^10.5.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.html": "npx prettier --write",
    "*.css": "npx prettier --write",
    "*.js": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scarmonit/D4Guide.git"
  },
  "author": "Scarmonit",
  "license": "MIT",
  "homepage": "https://d4guide.scarmonit.com",
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
